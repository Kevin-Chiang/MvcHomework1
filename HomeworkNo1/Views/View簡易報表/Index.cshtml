@model IEnumerable<HomeworkNo1.Models.View簡易報表>

@{
    ViewBag.Title = "簡易報表";
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">簡易報表</h3>
                <div class="box-tools">
                    <div class="input-group">
                        <div class="input-group-btn">
                            <a href="@Url.Action("Excel")" class="btn btn-success"><i class="fa fa-file-excel-o"> Excel</i></a>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.客戶名稱)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactCnt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BankCnt)
                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.客戶名稱)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactCnt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BankCnt)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div>

@section breadcrumb{
    <section class="content-header">
        <h1>
            簡易報表
            <small>客戶是我們的衣食父母</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "View簡易報表")">簡易報表</a></li>
            <li class="active">資料列表</li>
        </ol>
    </section>
}