@model HomeworkNo1.Models.客戶資料

@{
    ViewBag.Title = "客戶資料明細";
}

<!-- Horizontal Form -->
<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">客戶資料修改</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="box-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.客戶名稱)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.客戶名稱)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.統一編號)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.統一編號)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.電話)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.電話)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.傳真)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.傳真)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.地址)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.地址)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>
            </div><!-- /.box-body -->
            <div class="box-footer">
                <a href="@Url.Action("Index", "客戶資料")" class="btn btn-default">取消</a>
                <a href="@Url.Action("Edit", "客戶資料", new { id = Model.Id })" class="btn btn-info pull-right">修改</a>
            </div><!-- /.box-footer -->
        </div>
    }
</div><!-- /.box -->

@section breadcrumb{
    <section class="content-header">
        <h1>
            客戶資料
            <small>客戶是我們的衣食父母</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "客戶資料")">客戶資料</a></li>
            <li class="active">資料修改</li>
        </ol>
    </section>
}