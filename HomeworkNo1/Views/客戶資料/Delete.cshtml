@model HomeworkNo1.Models.客戶資料

@{
    ViewBag.Title = "客戶資料刪除確認";
}

<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <h4><i class="icon fa fa-ban"></i> Delete!</h4>
    Are you sure you want to delete this?
</div>

<!-- Horizontal Form -->
<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">客戶資料刪除確認</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="box-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.客戶名稱)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.客戶名稱)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.統一編號)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.統一編號)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.電話)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.電話)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.傳真)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.傳真)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.地址)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.地址)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>
            </div><!-- /.box-body -->
            <div class="box-footer">
                <a href="@Url.Action("Index", "客戶資料")" class="btn btn-default">取消</a>
                <button type="submit" class="btn btn-danger pull-right">刪除</button>
            </div><!-- /.box-footer -->
        </div>
    }
</div><!-- /.box -->
